{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "projectName": {
            "type": "string",
            "defaultValue": "MyTestProject",
            "metadata": {
                "description": "The name of the project"
            }
        },
        "iotHubLocation": {
            "type": "string",
            "defaultValue": "westeurope",
            "metadata": {
                "description": "Location for IoT Hub"
            }
        },
        "iotHubSku": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "S1",
                "S2",
                "S3"
            ],
            "metadata": {
                "description": "SKU for IoT Hub"
            }
        },
        "deviceName": {
            "type": "string",
            "defaultValue": "VSCodeDevice",
            "metadata": {
                "description": "Name of the IoT device"
            },
            "maxLength": 128,
            "minLength": 1 // Added this to ensure a valid device name
        }
    },
    "variables": {
        "sanitizedProjectName": "[toLower(replace(parameters('projectName'), ' ', ''))]",
        "iotHubWord": "hub",
        "storageWord": "store",
        "iotHubName": "[if(empty(variables('sanitizedProjectName')), 'defaultHubName', concat(variables('sanitizedProjectName'), variables('iotHubWord')))]",
        "storageAccountName": "[substring(concat(variables('sanitizedProjectName'), variables('storageWord'), uniqueString(resourceGroup().id)), 0, 24)]",
        "consumerGroupWord": "cg",
        "consumerGroupName": "[concat(variables('iotHubName'), '-', variables('consumerGroupWord'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[variables('storageAccountName')]",
            "location": "[parameters('iotHubLocation')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2021-03-31",
            "name": "[variables('iotHubName')]",
            "location": "[parameters('iotHubLocation')]",
            "sku": {
                "name": "[parameters('iotHubSku')]",
                "capacity": 1
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 2
                    }
                }
            }
        },
        {
            "type": "Microsoft.Devices/IotHubs/eventHubEndpoints/ConsumerGroups",
            "apiVersion": "2021-03-31",
            "name": "[concat(variables('iotHubName'), '/events/', variables('consumerGroupName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', variables('iotHubName'))]"
            ]
        },
        {
            "type": "Microsoft.Devices/IotHubs/devices",
            "apiVersion": "2021-03-31",
            "name": "[concat(variables('iotHubName'), '/', parameters('deviceName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', variables('iotHubName'))]"
            ],
            "properties": {
                "deviceId": "[parameters('deviceName')]",
                "status": "enabled"
            }
        }
    ],
    "outputs": {
        "iotHubName": {
            "type": "string",
            "value": "[variables('iotHubName')]"
        },
        "consumerGroupName": {
            "type": "string",
            "value": "[variables('consumerGroupName')]"
        },
        "iotHubHostName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Devices/IotHubs', variables('iotHubName'))).hostName]"
        },
        "storageAccountName": {
            "type": "string", 
            "value": "[variables('storageAccountName')]"
        }
    }
}
