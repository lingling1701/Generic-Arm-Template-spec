{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.2",
    "parameters": {
        "projectName": {
            "type": "string",
            "defaultValue": "vsCodeIoTProject",
            "metadata": {
                "description": "Base name for Azure resources (max 24 chars, alphanumeric only)"
            },
            "maxLength": 24,
            "minLength": 3
        },
        "iotHubLocation": {
            "type": "string",
            "defaultValue": "westeurope",
            "metadata": {
                "description": "Location for IoT Hub"
            }
        },
        "iotHubSku": {
            "type": "string",
            "defaultValue": "F1",
            "allowedValues": [
                "F1",
                "S1",
                "S2",
                "S3"
            ],
            "metadata": {
                "description": "SKU for IoT Hub"
            }
        },
        "deviceName": {
            "type": "string",
            "defaultValue": "VSCodeDevice",
            "maxLength": 128,
            "metadata": {
                "description": "Name of the IoT device"
            }
        }
    },
    "variables": {
        "sanitizedProjectName": "[toLower(replace(parameters('projectName'), ' ', ''))]",
        "iotHubName": "[substring(concat(variables('sanitizedProjectName'), 'hub', uniqueString(resourceGroup().id)), 0, 24)]",
        "storageAccountName": "[substring(concat(variables('sanitizedProjectName'), 'store', uniqueString(resourceGroup().id)), 0, 24)]",
        "consumerGroupName": "[concat('consumergroup', uniqueString(resourceGroup().id))]"
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "apiVersion": "2021-04-01",
            "name": "[variables('storageAccountName')]",
            "location": "[parameters('iotHubLocation')]",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "StorageV2"
        },
        {
            "type": "Microsoft.Devices/IotHubs",
            "apiVersion": "2021-03-31",
            "name": "[variables('iotHubName')]",
            "location": "[parameters('iotHubLocation')]",
            "sku": {
                "name": "[parameters('iotHubSku')]",
                "capacity": 1
            },
            "properties": {
                "eventHubEndpoints": {
                    "events": {
                        "retentionTimeInDays": 1,
                        "partitionCount": 2
                    }
                }
            }
        },
        {
            "type": "Microsoft.Devices/IotHubs/eventHubEndpoints/ConsumerGroups",
            "apiVersion": "2021-03-31",
            "name": "[concat(variables('iotHubName'), '/events/', variables('consumerGroupName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Devices/IotHubs', variables('iotHubName'))]"
            ]
        },
        {
            "type": "Microsoft.Devices/iothubs/devices",
            "apiVersion": "2021-03-31",
            "name": "[concat(variables('iotHubName'), '/', parameters('deviceName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Devices/iothubs', variables('iotHubName'))]"
            ]
        }
    ],
    "outputs": {
        "iotHubName": {
            "type": "string",
            "value": "[variables('iotHubName')]"
        },
        "iotHubHostName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Devices/iothubs', variables('iotHubName'))).hostName]"
        },
        "storageAccountName": {
            "type": "string", 
            "value": "[variables('storageAccountName')]"
        }
    }
}
